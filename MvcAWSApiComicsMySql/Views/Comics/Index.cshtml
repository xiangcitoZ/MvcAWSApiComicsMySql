@model IEnumerable<MvcAWSApiComicsMySql.Models.Comic>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdComic)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Imagen)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdComic)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                <img src="@item.Imagen" style="width:100px;height:100px">
            </td>
            <td>
                    <a class="nav-link text-dark"
                   asp-area=""
                   asp-controller="Comics"
                   asp-action="Details" 
                   asp-route-id="@item.IdComic">DETALLES</a>
            </td>
        </tr>
}
    </tbody>
</table>
